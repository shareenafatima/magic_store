
<section class="hero is-warning">
<div class="hero-body">
<div class="container">
<h1 class="title">
Latest Instruments on Magic Store
</h1>
</div>
</div>
</section>
<div class="container">
<div class="instrument-index-grid pt4">
 <% @instruments.each do |instrument| %>

 <div class="instrument border-light">
 <div calss="instrument-thumb">
 

 <%= link_to image_tag(instrument.image_url(:thumb)), instrument %>  


 <% if instrument.condition? %>
<div class="condition">
<div class="tag is-dark"><%= instrument.condition %></div>
</div>
<% end %>
</div>

<div class="pa3">

<h3 calss="fw7 f4 title"><%= link_to instrument.title, instrument %></h3>
<p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(instrument.price) %></p>

<% if instrument_author(instrument) %>
<%= button_to 'Edit', edit_instrument_path(instrument), calss: "button is-small" %>
<%= button_to'Delete', instrument, method: :delete, data: {confirm: "Are you Sure ?" }, class: "button is-small" %>
<% end %>
</div>
</div>

<% end %>
</div>


